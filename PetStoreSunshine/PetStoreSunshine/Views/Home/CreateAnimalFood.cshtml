@model PetStoreSunshine.Data.AnimalFood

@{
    ViewData["Title"] = "CreateAnimalFood";
}

<h4>Hrana za ljubimce</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAnimalFood">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AnimalFoodId" class="control-label"></label>
                <input asp-for="AnimalFoodId" class="form-control" />
                <span asp-validation-for="AnimalFoodId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <input asp-for="Size" class="form-control" />
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Dodaj" class="btn btn-primary" />
                <a asp-action="AnimalFood" class="btn btn-success">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
